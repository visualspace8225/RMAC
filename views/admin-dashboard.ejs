<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Manage Applications & Appointments</title>
  <meta name="description" content="Manage applications and appointments efficiently with the admin dashboard. View, approve, and track applicant resumes and service requests in one place.">

  <meta name="keywords" content="admin dashboard, applications management, appointments management, admin panel, view resumes, manage applicants, admin tools">

  <link rel="canonical" href="https://rmac.in/admin-dashboard">

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="./img/logoo.jpg" />

  <!-- Bootstrap CSS -->
  <style>
    @media (max-width: 575.98px) {
  header {
    text-align: center;
  }
  
  header h1 {
    margin-bottom: 10px;
  }
  
  header button {
    position: relative;
    top: auto;
    right: auto;
    margin-top: 10px;
  }
}



    /* Prevent long messages from expanding the table */
    .table td, .table th {
      word-wrap: break-word;
      white-space: normal;
    }

    /* Optional: You can add a maximum width for the message column */
    .table td:last-child {
      max-width: 250px; /* Adjust as needed */
      overflow: hidden;
      text-overflow: ellipsis;
    }
  </style>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid p-0">
    <header class="bg-primary text-white py-3 d-flex justify-content-center align-items-center position-relative">
      <h1 class="m-0">Admin Dashboard</h1>
      <button class="btn btn-danger position-absolute top-0 end-0 m-3" onclick="logout()">Logout</button>
    </header>
    <div class="container my-4">
      <!-- Applications Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          <h2 class="card-title m-0">Applications</h2>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead class="table-primary">
                <tr>
                  <th>Full Name</th>
                  <th>Email</th>
                  <th>Mobile</th>
                  <th>Position</th>
                  <th>Experience</th>
                  <th>About</th>
                  <th>Resume</th>
                </tr>
              </thead>
              <tbody>
                <% applications.forEach(application => { %>
                  <tr>
                    <td><%= application.fullName %></td>
                    <td><%= application.email %></td>
                    <td><%= application.phone %></td>
                    <td><%= application.position %></td>
                    <td><%= application.experience %></td>
                    <td><%= application.aboutYourself %></td>
                    <td>
                      <% if (application.resume) { %>
                        <a href="/uploads/<%= application.resume %>" target="_blank" class="btn btn-link">View Resume</a>
                      <% } else { %>
                        <span class="text-muted">Not yet uploaded</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Appointments Section -->
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="card-title m-0">Appointments</h2>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead class="table-primary">
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Mobile Number</th>
                  <th>Service</th>
                  <th>Date</th>
                  <th>Message</th>
                </tr>
              </thead>
              <tbody>
                <% appointments.forEach(appointment => { %>
                  <tr>
                    <td><%= appointment.name %></td>
                    <td><%= appointment.email %></td>
                    <td><%= appointment.mobile %></td>
                    <td><%= appointment.service %></td>
                    <td><%= new Date(appointment.date).toDateString() %></td>
                    <td><%= appointment.message %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function logout() {
        if (confirm("Are you sure you want to logout?")) {
          window.location.href = "/logout";
        }
      }
  </script>
</body>
</html>
